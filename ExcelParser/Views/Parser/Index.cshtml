@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Home Page";
}

<form enctype="multipart/form-data" method="post" action="/">
    <div class="input-group">
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="fileInput" name="files">
            <label class="custom-file-label" for="fileInput">Choose file</label>
        </div>
        <div class="input-group-append">
            <input class="btn btn-secondary" type="submit" value="Upload" />
        </div>
    </div>
</form>
<br />
@if (!Model.Any()) {
    <h1 class="text-center">No data</h1>
} else {
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-sm">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Company Name</th>
                    <th scope="col">Employee Code</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">ID Card Number</th>
                    <th scope="col">Position</th>
                    <th scope="col">Department</th>
                    <th scope="col">Cost Centre</th>
                    <th scope="col">Tax Status</th>
                    <th scope="col">Payment Type</th>
                    <th scope="col">Basic Hours</th>
                    <th scope="col">Basic Amount</th>
                    <th scope="col">Leave Hours</th>
                    <th scope="col">Leave Amount</th>
                    <th scope="col">Overtime Rate Hours</th>
                    <th scope="col">Overtime Rate Amount</th>
                    <th scope="col">Adjustments Pre-Tax</th>
                    <th scope="col">Cash Benefits Taxable</th>
                    <th scope="col">Gross</th>
                    <th scope="col">Tax</th>
                    <th scope="col">SSC</th>
                    <th scope="col">SSC Retained</th>
                    <th scope="col">Company SSC</th>
                    <th scope="col">SSC Contributions</th>
                    <th scope="col">Mat Lv Fund</th>
                    <th scope="col">Adjustments Post-Tax</th>
                    <th scope="col">Cash Benefits Non-Taxable</th>
                    <th scope="col">Advance Payment</th>
                    <th scope="col">Net</th>
                    <th scope="col">CAT2</th>
                    <th scope="col">CAT3</th>
                    <th scope="col">Car Use</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model) {
                    <tr>
                        <td scope="row">@employee.CompanyName</td>
                        <td>@employee.EmployeeCode</td>
                        <td>@employee.FirstName</td>
                        <td>@employee.LastName</td>
                        <td>@employee.IdCardNumber</td>
                        <td>@employee.Position</td>
                        <td>@employee.Department</td>
                        <td>@employee.CostCentre</td>
                        <td>@employee.TaxStatus</td>
                        <td>@employee.PaymentType</td>
                        <td>@employee.BasicHours</td>
                        <td>@employee.BasicAmount</td>
                        <td>@employee.LeaveHours</td>
                        <td>@employee.LeaveAmount</td>
                        <td>@employee.OvertimeRateHours</td>
                        <td>@employee.OvertimeRateAmount</td>
                        <td>@employee.AdjustmentsPreTax</td>
                        <td>@employee.CashBenefitsTaxable</td>
                        <td>@employee.Gross</td>
                        <td>@employee.Tax</td>
                        <td>@employee.Ssc</td>
                        <td>@employee.SscRetained</td>
                        <td>@employee.CompanySsc</td>
                        <td>@employee.SscContributions</td>
                        <td>@employee.MatLvFund</td>
                        <td>@employee.AdjustmentsPostTax</td>
                        <td>@employee.CashBenefitsNonTaxable</td>
                        <td>@employee.AdvancedPayment</td>
                        <td>@employee.Net</td>
                        <td>@employee.Cat2</td>
                        <td>@employee.Cat3</td>
                        <td>@employee.CarUse</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}